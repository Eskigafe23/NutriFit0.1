<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Contenedor principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar arriba -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#BBDEFB"
            app:title="NutriFit"
            app:titleTextColor="@color/black"
            app:navigationIconTint="#000000" />

        <!-- Contenido centrado horizontalmente -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp">

                <!-- Imagen ancho completo -->
                <ImageView
                    android:id="@+id/imgFondo"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/fondo_salud"
                    android:contentDescription="Imagen motivacional"
                    android:layout_marginBottom="27dp"
                    android:layout_marginTop="45dp"/>

                <!-- Frase motivacional -->
                <TextView
                    android:id="@+id/tvFrase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cada día es una nueva oportunidad para cuidar tu salud"
                    android:textSize="22sp"
                    android:textColor="#003e8b"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="40dp" />

                <!-- Botón principal -->
                <Button
                    android:id="@+id/btnComenzar"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Comenzar tu día saludable"
                    android:backgroundTint="#BBDEFB"
                    android:textColor="#000000"
                    android:textAllCaps="false"
                    android:padding="16dp"
                    android:elevation="4dp"
                    android:layout_marginBottom="24dp" />

                <!-- Botones secundarios -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="2">

                    <Button
                        android:id="@+id/btnTips"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Tips"
                        android:backgroundTint="#50d3a7"
                        android:textColor="#FFFFFF"
                        android:textAllCaps="false"
                        android:layout_marginEnd="12dp"
                        android:padding="14dp" />

                    <Button
                        android:id="@+id/btnCalorias"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Calcular calorías"
                        android:backgroundTint="#fe6f62"
                        android:textColor="#FFFFFF"
                        android:textAllCaps="false"
                        android:layout_marginStart="12dp"
                        android:padding="14dp" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Menú lateral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        app:itemTextColor="#000000"
        app:menu="@menu/activity_main_drawer"
        app:headerLayout="@layout/nav_header_main" />

</androidx.drawerlayout.widget.DrawerLayout>